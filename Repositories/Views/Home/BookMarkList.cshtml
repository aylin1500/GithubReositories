@model IEnumerable<Repositories.Models.Repository>
@{
    ViewBag.Title = "Bookmark List";
}

<h2>Bookmark List</h2>

<p>
    @Html.ActionLink("Back to search", "Index", null, new { @class = "btn btn-default" })
</p>
@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageSrc)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="@Url.Content(@item.ImageSrc)" height="40" />
                </td>
            </tr>
        }

    </table>
}
else
{
    <h4 class="alert alert-warning" role="alert">
        No result
    </h4>
}